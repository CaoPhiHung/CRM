{% extends "VietlandUserBundle::layout.html.twig" %}
{% block head %}
<title>Đăng ký thành viên</title>
{% endblock %}
{% block content %}
<div id="login">
    <div class="loginWrap">
        <h2 class="glyphicons unlock form-signin-heading"><i></i> Registration</h2>
        <form  class="form-signin" action="{{ path('fos_user_registration_register') }}" {{ form_enctype(form) }} method="POST" class="signup">
            {{ form_widget(form) }}
            <div class="separator line"></div>
            <span class="pull-left uniformjs"><label class="checkbox"><input type="checkbox" value="remember-me">Remember me</label></span>
            <input type="submit" value="{{ 'registration'|trans }}" class="btn btn-large btn-primary pull-right"/>
            <div class="clearfix"></div>
        </form>
    </div>
</div>
{% endblock %}
