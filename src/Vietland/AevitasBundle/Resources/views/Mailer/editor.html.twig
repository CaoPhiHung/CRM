{% extends "VietlandStravelBundle:Backend:root.html.twig" %}
{% block head %}
<title>{{'Editing Hotel' | trans}} - Spirit Travel</title>
{% endblock %}
{% block content %}
<div class="row-fluid">
    <div id="addhotel" class="span12">
        <div class="head">
            <div class="isw-documents"></div>
            <h1>{{'Adding Hotel' | trans}}</h1>
            <div class="clear"></div>
        </div>
        <div class="block-fluid">  
            <form method="POST" action="{{path('edit_email_template', {'action': action})}}">
                <div class="row-form">
                    <div class="span3">Textarea placeholder:</div>
                    <div class="span9">{{form_widget(form.templateSource)}}</div>
                    <div class="clear"></div>
                    {{form_rest(form)}}
                    <input type="submit" value="Commit Template"/>
                </div>
            </form>
        </div>
    </div>
</div>
{% endblock %}