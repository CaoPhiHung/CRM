	 function showBranchesByCity(i, obj){
		 if (typeof(obj) != 'undefined'){
			 $('#panel-left li').removeClass('menu-active');
			 $(obj).addClass('menu-active');
		 }
		 var cts = '';
		 for (j in Branches[i]){
			 Brand = Branches[i][j];
			 if (j%2==0){
			 	cts += '<div class="item item-left">';
			 }else{
			 	cts += '<div class="item item-right">';
			 }
			 cts += '<div class="branch-name">'+Brand.name+'</div>'
			 cts += '<div class="branch-image"><img src="'+Brand.img+'" width="265"/></div>';
			 cts += '<div class="box-left">Address</div> <div class="box-right">'+Brand.address+'</div>';
			 cts += '<div class="box-left">Phone</div> <div class="box-right">'+Brand.phne+'</div>';
			 cts += '</div>';
		 }
		 $('#panel-right').html(cts);
		 j++;//console.log(j);
		 var hmain = Math.ceil(j/2)*300;
		 if (hmain < 500){
			 hmain = 500;
		 }
		 $('#main .content').css({'height':hmain});
		 $('#panel-right').css({'height':hmain});
	 }
	 $('#panel-left li').on('click',function(i, obj){
            index = $('#panel-left li').index(this);
